<%
var preguntas_con_respuestas = [];
for (var i = 0; i < comments.length; i++) {
    if (preguntas_con_respuestas.indexOf(comments[i].QuizId) === -1){
        preguntas_con_respuestas.push(comments[i].QuizId);
    }
}
%>
